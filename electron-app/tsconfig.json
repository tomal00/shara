{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "Root/*": [
        "src/*"
      ],
      "Public/*": [
        "public/*"
      ],
      "Main/*": [
        "src/main/*"
      ],
      "Models/*": [
        "src/models/*"
      ],
      "Components/*": [
        "src/renderer/Components/*"
      ],
      "Renderer*/": [
        "src/renderer/*"
      ],
      "Utils/*": [
        "src/utils/*"
      ]
    },
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "esnext"
  },
  "exclude": [
    "node_modules"
  ]
}